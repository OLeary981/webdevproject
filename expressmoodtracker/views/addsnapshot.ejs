<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emotion Rating</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <style>
        /* Additional custom styles */
        .form-container {
            width: 50%; /* Take up half of the screen width */
            margin: 0 auto; /* Center the form horizontally */
            margin-top: 50px; /* Optional: Add some top margin for better spacing */
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="container">
            <h1 class="title">Rate Your Emotions</h1>
            
            <form action="/submit" method="POST">
                <div class="field">
                    <label class="label" for="enjoyment">Enjoyment:</label>
                    <div class="control">
                        <input class="slider is-fullwidth" type="range" id="enjoyment" name="enjoyment" min="0" max="10" value="0">
                        <output for="enjoyment" id="output-enjoyment" class="slider-value">0</output>
                    </div>
                </div>
    
                <!-- Repeat for other sliders -->
                
                <div class="field">
                    <div class="control">
                        <button class="button is-primary" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Update output values when sliders are changed
        const sliders = document.querySelectorAll('input[type="range"]');
        sliders.forEach(slider => {
            const output = document.getElementById(`output-${slider.id}`);
            output.textContent = slider.value;
            slider.addEventListener('input', () => {
                output.textContent = slider.value;
            });
        });
    </script>
</body>
</html>