<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Favourites</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>
<body>
    <nav class="navbar is-black" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item">
                <img src="/imgs/food_icon.png">
            </a>
        </div>
      
        <div class="navbar-menu is-active">
            <div class="navbar-start">
                <a class="navbar-item is-hoverable" href="/">Favourites</a>
                <a class="navbar-item is-hoverable" href="/newfav">Add Favourite</a>
            </div>
        
            <div class="navbar-end"></div> 
        </div>
    </nav>

    <section class="section">
        <div class="container">
            <h1 class="title">Favourite Foods</h1>

            <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Favourite</th>
                        <th>Modify</th>
                    </tr>
                </thead>
                <tbody>
                    <% result.forEach((row) => { %>
                        <tr>
                            <td><%= row.person %></td>
                            <td><%= row.favourite %></td>
                            <td>
                                <a href='/editfav/<%= row.id %>' class='button is-small is-primary'>Edit</a>
                                <a href='/delfav/<%= row.id %>' class='button is-small is-danger'>Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </section>
    
    
</body>
</html>