<nav class="navbar is-black navbar-fixed" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a <% if (isLoggedIn) { %>href="/allSnapshots"<% } else { %>href="/" <% } %> class="navbar-item">
            <img src="/imgs/wellbeing_icon.png" alt="Wellbeing Icon" width="30" height="30" style="margin-top: auto; margin-bottom: auto;">
        </a>

        <!-- Add a hamburger menu button -->
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>
  
    <!-- Navbar menu -->
    <div id="navbarBasicExample" class="navbar-menu" style="background-color: black; color: white;">
       
        <div class="navbar-start">
            <% if (currentPage !== '/about' ) { %>
                <a class="navbar-item is-hoverable" href="/about">About</a> 
                <% } %>
            <% if (currentPage !== '/allsnapshots' && currentPage != '/register' && currentPage != '/login' && isLoggedIn) { %>
                <a class="navbar-item is-hoverable" href="/allsnapshots">Overview</a>
            <% } %>
            <% if (currentPage !== '/newsnapshot' && currentPage !== '/login' && currentPage != '/register' && isLoggedIn) { %>
                <a class="navbar-item is-hoverable" href="/newsnapshot">Add Snapshot</a>
            <% } %>
            
            
        </div>
    
        <div class="navbar-end" style="color: white;">
           
            <% if ((!isLoggedIn && currentPage !== '/login') || (currentPage === '/about')) { %>
                <a class="navbar-item is-hoverable" href="/login">Login</a>
                <a class="navbar-item is-hoverable" href="/register">Register</a>
            <% } else if (currentPage !== '/login'){ %>
                <a class="navbar-item is-hoverable" href="/logout">Logout</a>
            <% } else { %>
                <a class="navbar-item is-hoverable" href="/register">Register</a>
            <% } %>
            
        </div>
    </div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get the hamburger button and the menu
        var burger = document.querySelector('.navbar-burger');
        var menu = document.querySelector('.navbar-menu');

        // Toggle the 'is-active' class on both elements
        burger.addEventListener('click', function () {
            burger.classList.toggle('is-active');
            menu.classList.toggle('is-active');
        });
    });
</script>
