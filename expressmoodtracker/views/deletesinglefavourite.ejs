<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Favourites</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>
<body>
    <nav class="navbar is-black" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item">
                <img src="/imgs/food_icon.png">
            </a>
        </div>
      
        <div class="navbar-menu is-active">
            <div class="navbar-start">
                <a class="navbar-item is-hoverable" href="/">Favourites</a>
                <a class="navbar-item is-hoverable" href="/editfav">Edit Favourite</a>
            </div>
        
            <div class="navbar-end"></div> 
        </div>
    </nav>

    <section class="section">
        <div class="container">

            <h1 class='title'>Delete Favourite</h1>
            <% for (let row of result) { %>
                <% var id = row.id;         %>
                <% var name = row.person;   %>
                <% var fav = row.favourite; %>
            <% } %>
            <form action="/delfav/<%= id %>" method="post">

                <div class="field">
                    <label class="label" for="name-input">Name</label>
                
                    <div class="control">
                        <input class="input" name="myname" type="text" value="<%= name %>" id="name-input" disabled>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="food-input">Favourite</label>
                    <div class="select">
                        <select name="myfoodtype" id="food-input" disabled>
                        <%  if (fav == "Meat") { %>
                            <option selected >Meat</option>
                            <option>Fish</option>
                            <option>Vegetables</option>
                            <option>Desert</option>
                        <%    } else if (fav == "Fish") { %>
                            <option>Meat</option>
                            <option selected>Fish</option>
                            <option>Vegetables</option>
                            <option>Desert</option>
                        <%    } else if (fav == "Vegetables") { %>
                            <option>Meat</option>
                            <option>Fish</option>
                            <option selected>Vegetables</option>
                            <option>Desert</option>
                        <%    } else if (fav == "Desert") { %>
                            <option>Meat</option>
                            <option>Fish</option>
                            <option>Vegetables</option>
                            <option selected>Desert</option>
                        <% } %>
                        </select>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <input class="button is-danger" type="submit" value="Delete">
                    </div>
                </div>
            </form>
        </div>

    </section>
    
</body>
</html>